<!-- Validation failure messages -->
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Add User</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="control-label">
          First name
        </label>

        <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @user.first_name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @user.last_name %>">
      </div>

      <!-- Label and input for user_name -->
      <div class="form-group">
        <label for="user_name" class="control-label">
          User name
        </label>

        <input type="text" id="user_name" name="user_name" placeholder="User name" class="form-control" value="<%= @user.user_name %>">
      </div>

      <!-- Label and input for user_name -->
      <div class="form__group">
        <label for="password" class = "control-label"> Password</label>

        <input id="password" type="password" name="password" class="form__input" placeholder="Password" required>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @user.email %>">
      </div>

      <!-- Label and input for zip_code -->
      <div class="form-group">
        <label for="zip_code" class="control-label">
          Zip code
        </label>

        <input type="text" id="zip_code" name="zip_code" placeholder="Zip code" class="form-control" value="<%= @user.zip_code %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @user.address %>">
      </div>

      <!-- Label and input for address_2 -->
      <div class="form-group">
        <label for="address_2" class="control-label">
          Address 2
        </label>

        <input type="text" id="address_2" name="address_2" placeholder="Address 2" class="form-control" value="<%= @user.address_2 %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @user.city %>">
      </div>

      <!-- Label and input for state_province -->
      <div class="form-group">
        <label for="state_province" class="control-label">
          State province
        </label>

        <input type="text" id="state_province" name="state_province" placeholder="State province" class="form-control" value="<%= @user.state_province %>">
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="control-label">
          Country
        </label>

        <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @user.country %>">
      </div>

      <!-- Label and input for card_number -->
      <div class="form-group">
        <label for="card_number" class="control-label">
          Card number
        </label>

        <input type="text" id="card_number" name="card_number" placeholder="Card number" class="form-control" value="<%= @user.card_number %>">
      </div>

      <!-- Label and input for expiration_date -->
      <div class="form-group">
        <label for="expiration_date" class="control-label">
          Expiration date
        </label>

        <input type="text" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @user.expiration_date %>">
      </div>

      <!-- Label and input for security_code -->
      <div class="form-group">
        <label for="security_code" class="control-label">
          Security code
        </label>

        <input type="text" id="security_code" name="security_code" placeholder="Security code" class="form-control" value="<%= @user.security_code %>">
      </div>

      <button class="btn btn-success">
        Create User
      </button>
      or
      <a href="/users">Cancel</a>
    </form>
  </div>
</div>
