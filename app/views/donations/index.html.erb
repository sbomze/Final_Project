<div class="page-header">
  <h1>
    Donations
    <a href="/donations/new" class="btn btn-lg btn-success">New Donation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Charity</th>
        <th>Amount</th>
        <th>Frequency</th>
        <th>Actions</th>
      </tr>

      <% @donations.each do |donation| %>
      <tr>
        <td><%= User.where(:id => donation.user_id).pluck(:user_name)%>
        <td><%= Charity.where(:id => donation.charity_id).pluck(:name).flatten %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.frequency %></td>
        <td>
          <a href="/donations/<%= donation.id %>" class="btn btn-primary">Show</a>
          <a href="/donations/<%= donation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_donation/<%= donation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
