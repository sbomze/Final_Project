<% @names = [] %>
<% @donations.each do |donation| %>
<% @names += [donation.charity.name.to_s] %>
<% @names = @names.uniq %>
<% end %>

<% @amt = number_to_currency(@donations.pluck("amount").inject(:+)) %>

<div class="page-header">
  <h1>
    My Profile
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User name</th>
        <th>Charities Supported</th>
        <th>Current Donations</th>
        <th>Current Donation Amount</th>
        <th>Actions</th>
      </tr>

      <tr>
        <td><%= @user.user_name %></td>
        <td><%= @names.join(' | ') %></td>
        <td><%= @donations.count %></td>
        <td><%= @amt %></td>
        <td>
          <a href="/users/<%= @user.id %>" class="btn btn-primary">Show</a>
          <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user/<%= @user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
    </table>
  </div>
</div>
