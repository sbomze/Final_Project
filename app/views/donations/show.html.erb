<div class="page-header">
  <h1><%= @donation.user.user_name %>'s Donation</h1>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @donation.user.user_name %></dd>

      <dt>Charity</dt>
      <dd><%= @donation.charity.name %></dd>

      <dt>Amount</dt>
      <dd><%= number_to_currency(@donation.amount) %></dd>

      <dt>Frequency</dt>
      <dd><%= @donation.frequency %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/donations" class="btn btn-primary">
        Back
      </a>
      <a href="/donations/<%= @donation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_donation/<%= @donation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
